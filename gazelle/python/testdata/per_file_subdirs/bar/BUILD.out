load("@rules_python//python:defs.bzl", "py_library", "py_test")

py_library(
    name = "bar",
    srcs = ["__init__.py"],
    visibility = ["//:__subpackages__"],
)

py_library(
    name = "foo",
    srcs = [
        "__init__.py",
        "foo.py",
    ],
    visibility = ["//:__subpackages__"],
)

py_test(
    name = "bar_test",
    srcs = [
        "__test__.py",
        "bar_test.py",
    ],
    main = "__test__.py",
)

py_test(
    name = "foo_test",
    srcs = [
        "__test__.py",
        "foo_test.py",
    ],
    main = "__test__.py",
)
