load("@rules_python//python:defs.bzl", "py_library", "py_test")

py_library(
    name = "remove_invalid_library",
    srcs = ["__init__.py"],
    visibility = ["//:__subpackages__"],
)

py_library(
    name = "deps_with_no_srcs_library",
    deps = [
        "//:remove_invalid_library",
        "@pypi//bar",
        "@pypi//foo",
    ],
)

py_test(
    name = "my_test",
    srcs = ["my_test.py"],
)
