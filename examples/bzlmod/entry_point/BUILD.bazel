load("@python_versions//3.9:defs.bzl", py_entry_point_binary_3_9 = "py_entry_point_binary")
load("@rules_python//python:defs.bzl", "py_test")
load("@rules_python//python:py_entry_point_binary.bzl", "py_entry_point_binary")

# We can specifically request the py_entry_point_binary to be running with Python 3.9.
py_entry_point_binary_3_9(
    name = "yamllint",
    pkg = "@pip//yamllint:pkg",
    # yamllint does not have any other scripts except 'yamllint' so the
    # user does not have to specify which console script we should chose from
    # the package.
)

# Here we are running the default version.
py_entry_point_binary(
    name = "pylint",
    pkg = "@pip//pylint",
    # Because `pylint` has multiple console_scripts available, we have to
    # specify which we want
    script = "pylint",
    deps = [
        # One can add extra dependencies to the entry point.
        "@pip//pylint_print",
    ],
)

py_test(
    name = "entry_point_test",
    srcs = ["test_entry_point.py"],
    data = [
        ":pylint",
        ":yamllint",
    ],
    env = {
        "PYLINT_ENTRY_POINT": "$(rlocationpath :pylint)",
        "YAMLLINT_ENTRY_POINT": "$(rlocationpath :yamllint)",
    },
    main = "test_entry_point.py",
    deps = ["@rules_python//python/runfiles"],
)
